# Required env vars
# Fill and copy to .env (never commit .env)

# Etsy Open API v3
ETSY_CLIENT_ID=
ETSY_CLIENT_SECRET= # only if using confidential client (server-side)
ETSY_REDIRECT_URI=
ETSY_SCOPES="listings_w shops_w transactions_r profile_r"

# Printify
PRINTIFY_TOKEN=

# AI Image Generation (NEW)
# CRITICAL: Requires Google Cloud billing account (Tier 1+)
# Free tier does NOT support image generation APIs
GEMINI_API_KEY=

# AI Copy Generation (NEW) 
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Keyword Research (NEW)
ERANK_API_KEY=
MARMALEAD_API_KEY=

# Gumroad
# Gumroad Ping doesnâ€™t sign by default; if you implement your own secret, put it here
GUMROAD_PING_SECRET=

# Database
DB_URL=sqlite:///data.db

# Rate Limiting & Monitoring (NEW)
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=500
CIRCUIT_BREAKER_THRESHOLD=5
QUOTA_ALERT_THRESHOLD=80
WEBHOOK_TIMEOUT=30000
RETRY_MAX_ATTEMPTS=3

# API Queue Limits (NEW)
PRINTIFY_GLOBAL_LIMIT=500
PRINTIFY_CATALOG_LIMIT=80
PRINTIFY_PUBLISH_LIMIT=150
ETSY_REQUEST_LIMIT=8

# General
LOG_LEVEL=info
